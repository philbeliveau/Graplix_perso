# Environment Configuration
ENVIRONMENT=development  # development, staging, production

# Data Source Configuration
DATA_SOURCE=local  # local or s3
LOCAL_DATA_PATH=../data
S3_BUCKET_NAME=your-pii-extraction-bucket
S3_REGION=us-west-2

# AWS Configuration
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_DEFAULT_REGION=us-west-2

# Database Configuration
DATABASE_URL=sqlite:///pii_extraction.db
# For production: postgresql://user:password@host:port/database

# ML Model Configuration
HUGGINGFACE_API_TOKEN=your-hf-token
MLFLOW_TRACKING_URI=sqlite:///mlflow.db
# For production: http://mlflow-server:5000

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/pii_extraction.log

# Dashboard Configuration
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=localhost

# Security Configuration
SECRET_KEY=your-secret-key-for-session-management
ENCRYPTION_KEY=your-encryption-key-for-data-protection

# OCR Configuration
TESSERACT_CMD=/usr/bin/tesseract  # Path to tesseract executable
OCR_LANGUAGES=eng+fra  # Languages for OCR processing

# Processing Configuration
MAX_FILE_SIZE_MB=50
CONCURRENT_JOBS=4
PROCESSING_TIMEOUT_SECONDS=300

# Privacy Configuration
ENABLE_DATA_REDACTION=true
REDACTION_CHARACTER=*
AUDIT_LOG_ENABLED=true

# Compliance Configuration
GDPR_COMPLIANCE_MODE=true
LAW25_COMPLIANCE_MODE=true
DATA_RETENTION_DAYS=90
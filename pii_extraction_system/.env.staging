# Staging Environment Configuration
ENVIRONMENT=staging
DEBUG=false

# Data Source Configuration
DATA_SOURCE__SOURCE_TYPE=s3
DATA_SOURCE__LOCAL_PATH=./data
DATA_SOURCE__S3_BUCKET=pii-extraction-staging-bucket
DATA_SOURCE__S3_REGION=us-west-2

# Database Configuration
DATABASE_URL=postgresql://pii_user:${DB_PASSWORD}@pii-db-staging.internal:5432/pii_extraction_staging

# ML Model Configuration
ML_MODELS__ENABLED_MODELS=rule_based,ner,layout_aware
ML_MODELS__HUGGINGFACE_TOKEN=${HUGGINGFACE_TOKEN}
ML_MODELS__MLFLOW_URI=http://mlflow-staging.internal:5000
ML_MODELS__MODEL_CACHE_DIR=./data/models

# Processing Configuration
PROCESSING__MAX_FILE_SIZE_MB=50
PROCESSING__CONCURRENT_JOBS=4
PROCESSING__TIMEOUT_SECONDS=300
PROCESSING__OCR_LANGUAGES=eng,fra
PROCESSING__TESSERACT_CMD=/usr/bin/tesseract
PROCESSING__OCR_ENGINE=both
PROCESSING__EASYOCR_USE_GPU=false
PROCESSING__ENABLE_LLM_OCR=true
PROCESSING__LLM_OCR_MODEL=gpt-4o-mini
PROCESSING__LLM_OCR_FALLBACK_MODEL=gpt-3.5-turbo
PROCESSING__MAX_LLM_COST_PER_DOCUMENT=0.10
PROCESSING__LLM_CONFIDENCE_THRESHOLD=0.8

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/pii_extraction_staging.log

# Dashboard Configuration
STREAMLIT_PORT=8501
STREAMLIT_HOST=0.0.0.0

# AWS Configuration
AWS_ACCESS_KEY_ID=${AWS_ACCESS_KEY_ID}
AWS_SECRET_ACCESS_KEY=${AWS_SECRET_ACCESS_KEY}
AWS_REGION=us-west-2

# Security Configuration
SECRET_KEY=${SECRET_KEY}
ENCRYPTION_KEY=${ENCRYPTION_KEY}

# Privacy Configuration
PRIVACY__ENABLE_REDACTION=true
PRIVACY__REDACTION_CHARACTER=*
PRIVACY__GDPR_COMPLIANCE=true
PRIVACY__LAW25_COMPLIANCE=true
PRIVACY__AUDIT_LOGGING=true
PRIVACY__DATA_RETENTION_DAYS=90

# Security Configuration
SECURITY__SECRET_KEY=${SECRET_KEY}
SECURITY__ENCRYPTION_KEY=${ENCRYPTION_KEY}
SECURITY__ENABLE_AUTH=true

# Monitoring Configuration
MONITORING__ENABLE_METRICS=true
MONITORING__PROMETHEUS_PORT=9090
MONITORING__HEALTH_CHECK_INTERVAL=30
MONITORING__ALERT_ON_ERRORS=true
MONITORING__PERFORMANCE_THRESHOLD_MS=3000

# Cache Configuration
REDIS_URL=redis://redis-staging.internal:6379/0
CACHE_TTL=3600
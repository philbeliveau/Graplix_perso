# Multi-LLM API Configuration
# Copy this file to .env and add your API keys

# OpenAI API Key (for GPT-4o, GPT-4o-mini, GPT-4 Turbo)
# Get your key at: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# Anthropic API Key (for Claude 3.5 Sonnet/Haiku, Claude 3 Opus)
# Get your key at: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-your-anthropic-api-key-here

# Google AI API Key (for Gemini 1.5 Pro/Flash)
# Get your key at: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=AIzaSy-your-google-api-key-here

# Mistral API Key (for Mistral Large/Medium/Small/Tiny)
# Get your key at: https://console.mistral.ai/
MISTRAL_API_KEY=m-your-mistral-api-key-here

# Optional: DeepSeek API Key
# Get your key at: https://platform.deepseek.com/
DEEPSEEK_API=sk-your-deepseek-api-key-here

# Optional: NVIDIA API Key
# Get your key at: https://build.nvidia.com/
NVIDIA_KEY=nvapi-your-nvidia-api-key-here

# Optional: Hugging Face API Key
# Get your key at: https://huggingface.co/settings/tokens
HUGGINGFACE_API_KEY=hf_your-huggingface-api-key-here

# Cost Tracking Settings (Optional)
# Set daily and monthly spending limits per provider
OPENAI_DAILY_LIMIT=10.0
OPENAI_MONTHLY_LIMIT=100.0
ANTHROPIC_DAILY_LIMIT=10.0
ANTHROPIC_MONTHLY_LIMIT=100.0
GOOGLE_DAILY_LIMIT=5.0
GOOGLE_MONTHLY_LIMIT=50.0
MISTRAL_DAILY_LIMIT=5.0
MISTRAL_MONTHLY_LIMIT=50.0

# System Settings
# Enable/disable features
ENABLE_COST_TRACKING=true
ENABLE_MONITORING=true
ENABLE_API_VALIDATION=true

# AWS Settings (for S3 storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_DEFAULT_REGION=us-east-1
S3_BUCKET_NAME=your-s3-bucket-name

# Application Settings
LOG_LEVEL=INFO
DEBUG_MODE=false